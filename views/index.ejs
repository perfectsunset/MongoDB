                                                                    <% } else if (file.type==="xml") { %>
                                                                      <a href="MyFiles/<%= file.filename %>" title="Click here to check out or download this file"><i class="far fa-file-code fa-3x" style="color:#404362;"></i></a>
                                                                      <div class="row" style="padding-left: 12px;"><%= file.metadata.originalname %> 
                                                                        <span>
                                                                          <form method="POST" action="/MyFiles/<%= file._id %>?_method=DELETE">
                                                                            <button class="btn" style="float: right;" title="Click here to delete this file">
                                                                              <i class="fas fa-trash-alt fa-2x" aria-hidden="true" style="color: #404362;"></i>
                                                                          </button>
                                                                          </form>
                                                                        </span> </div>
                                                                        <% } else if (file.type==="jar") { %>
                                                                          <a href="MyFiles/<%= file.filename %>" title="Click here to check out or download this file"><i class="fab fa-java fa-3x" style="color:#404362;"></i></a>
