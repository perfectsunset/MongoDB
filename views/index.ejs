<body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto">
          <div class="card card-body mb-3" style="background-color: rgba(255,255,255, 0.7);border-radius: 0px 200px;margin-top: 10px;">
          <h1 class="text-center display-4 my-4" style="color: #9dada3;">Safe&Secure</h1>
          <h5 class="text-center display-12 my-12" style="color:#404362;margin-bottom: 15px;">~Free secure files upload~</h5>
          <!--h1 class="text-center display-4 my-4" style="color:#324595;">Mongo File Uploads</h1-->
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="custom-file mb-3" style="text-align: center;">
              <input type="file" name="file" id="file" class="custom-file-input" style="margin-left: 200px;margin-top:45px">
              <label for="file" class="custom-file-label"></label>
            </div>
            <div style="text-align: center;">
            <input type="submit" value="Submit" class="btn btn-primary btn-block">
            <!--div style="margin:800px"></div-->
            </div>
          </form>
          </div>

<!-- ********************************************************* -->
<hr>
        <% if(files){ %>
          <% files.forEach(function(file) { %>
            <div class="card card-body mb-3">
              <% if(file.type === "image") { %>
              <a href="MyFiles/<%= file.filename %>" title="Click here to check out or download this file"><img src="MyFiles/<%= file.filename %>" alt="" style="border-radius: 10px;"></a>  
              <div class="row" style="padding-left: 12px;"><%=file.metadata.originalname %> 
                <span>
                  <form method="POST" action="/MyFiles/<%= file._id %>?_method=DELETE">
                    <button class="btn" style="float: right;" title="Click here to delete this file">
                      <i class="fas fa-trash-alt fa-2x" aria-hidden="true" style="color: #404362;"></i>
                  </button>
                  </form>
                </span> </div>
                <% } else if (file.type ==="pdf") { %>
